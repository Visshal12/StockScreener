<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockScreener.Pages.Crypto"
             Title="Add Crypto">

    <VerticalStackLayout Padding="30">
        <Entry x:Name="SymbolEntry" Placeholder="Symbol" />
        <Entry x:Name="NameEntry" Placeholder="Name" />
        <Editor x:Name="DescriptionEditor" Placeholder="Description" />
        <Button Text="Save" Clicked="OnSaveClicked" />

        <!-- Table Headers -->
        <Grid Padding="10" BackgroundColor="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Label Text="Symbol" FontAttributes="Bold" Grid.Column="0" />
            <Label Text="Name" FontAttributes="Bold" Grid.Column="1" />
            <Label Text="Description" FontAttributes="Bold" Grid.Column="2" />
            <Label Text="Created At" FontAttributes="Bold" Grid.Column="3" />
        </Grid>

        <!-- CollectionView for displaying stock information -->
        <CollectionView x:Name="StocksCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" BackgroundColor="LightGray" Margin="0,0,0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Label Text="{Binding Symbol}" Grid.Column="0" TextColor="Black" />
                        <Label Text="{Binding Name}" Grid.Column="1" TextColor="Black" />
                        <Label Text="{Binding Description}" Grid.Column="2" TextColor="Black" />
                        <Label Text="{Binding CreatedAt}" Grid.Column="3" TextColor="Black" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>

</ContentPage>

